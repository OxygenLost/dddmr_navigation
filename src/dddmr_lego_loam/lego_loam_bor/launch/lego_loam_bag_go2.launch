<launch>

  <!--name argument is not required, because it will overwrite all node name in the exec-->
  <node pkg="lego_loam_bor" exec="lego_loam_bag" output="screen" respawn="false">
    <param from="$(find-pkg-share lego_loam_bor)/config/loam_bag_go2_config.yaml" />
  </node>

  <node pkg="rviz2" exec="rviz2" output="screen" respawn="false" args="-d $(find-pkg-share lego_loam_bor)/rviz/lego_loam.rviz">
  </node>

  <!--- TF -->
  <node pkg="tf2_ros" exec="static_transform_publisher" name="sensor2baselink"  args="0.2 0.0 0.118 0.0 0.0 0 base_link velodyne" />
  <node pkg="tf2_ros" exec="static_transform_publisher" name="baselink2footprint"  args="0.0 0 -0.219 0.0 0.0 0 base_link base_footprint" />

</launch>
